{
  "parser": "@typescript-eslint/parser",
  "plugins": ["eslint-plugin-react", "@typescript-eslint"],
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "useJSXTextNode": true,
    "project": "./tsconfig.json"
  },

  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": "error"
  }
}
